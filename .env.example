# AI Service Configuration

# LLM Provider (gemini or loki)
LLM_PROVIDER=gemini

# Gemini API (Entwicklung)
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Loki Configuration (Produktion - Hybrid Two-Model Architecture)
LOKI_URL=http://10.10.10.5:11434
LOKI_VISION_MODEL=llama-vision-work
LOKI_MAPPING_MODEL=qwen-work

# Backend API
BACKEND_URL=http://localhost:8000
BACKEND_API_TOKEN=your_backend_token_here

# Service Configuration
SERVICE_PORT=5000
DEBUG=true

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=.eml,.msg,.pdf,.jpg,.jpeg,.png,.doc,.docx

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ai-service.log
